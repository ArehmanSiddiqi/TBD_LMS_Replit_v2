run = "npm run dev"
modules = ["nodejs-20", "python-3.11"]
hidden = [".config", "tsconfig.json", "tsconfig.node.json", "vite.config.js", ".gitignore"]
entrypoint = "src/App.tsx"

[nix]
channel = "stable-24_05"
packages = ["postgresql"]

[unitTest]
language = "nodejs"

[deployment]
deploymentTarget = "autoscale"
build = ["sh", "-c", "cd frontend && npm install && npm run build && cd ../backend && pip install -r requirements.txt && python manage.py collectstatic --noinput"]
run = ["sh", "-c", "cd backend && gunicorn --bind 0.0.0.0:$PORT --workers 4 --timeout 120 config.wsgi:application"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5173

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 37145
externalPort = 80

[[ports]]
localPort = 39379
externalPort = 3000

[[ports]]
localPort = 39759
externalPort = 3002

[[ports]]
localPort = 44209
externalPort = 3001

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "backend"

[[workflows.workflow]]
name = "frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"./preflight.sh && cd backend && python manage.py check && python manage.py migrate && python manage.py runserver 0.0.0.0:8000\""
waitForPort = 8000
